<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>
    <%= scenario.title %>
  </title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body class="bg-light">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 p-4 rounded shadow-lg my-5 bg-light">
        <h1 class="mb-4">
          <%= scenario.title %>
        </h1>

        <% if (scenario.imageUrl) { %>
          <img src="<%= scenario.imageUrl %>" class="img-fluid rounded mb-4"
            style="max-height: 300px; object-fit: cover;">
          <% } %>

            <div class="mb-3">
              <% scenario.tags.forEach(tag=> { %>
                <span class="badge me-2" style="background-color: <%= tagColorMap[tag] || '#bdc3c7' %>; color: white;">
                  <%= tag %>
                </span>
                <% }) %>
            </div>

            <p>
              <%= scenario.description %>
            </p>

            <div class="d-flex align-items-center my-3">
              <button class="btn border-success me-2 upvote-btn" data-id="<%= scenario.id %>">
                <i class="bi bi-hand-thumbs-up"></i> <span class="upvote-count">
                  <%= scenario.upvotes %>
                </span>
              </button>
              <button class="btn border-danger downvote-btn" data-id="<%= scenario.id %>">
                <i class="bi bi-hand-thumbs-down"></i> <span class="downvote-count">
                  <%= scenario.downvotes || 0 %>
                </span>
              </button>
            </div>

            <h4 class="mt-5">Comments</h4>
            <ul class="list-group mb-4">
              <% scenario.comments.forEach(comment=> { %>
                <li class="list-group-item">
                  <h6 class="text-muted mb-1">
                    <strong>
                      <%= comment.author %>
                    </strong> Â·
                    <small>
                      <%= new Date(comment.timestamp).toLocaleString() %>
                    </small>
                  </h6>
                  <p>
                    <%= comment.comment %>
                  </p>
                </li>
                <% }) %>
            </ul>

            <form method="POST" action="/discussion/<%= scenario.id %>/comment">
              <div class="mb-3">
                <textarea name="comment" class="form-control" placeholder="Write a comment..." required></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Post Comment</button>
            </form>
      </div>
    </div>
  </div>

  <script src="/vote.js"></script> <!-- Your upvote/downvote JS -->
</body>

</html>