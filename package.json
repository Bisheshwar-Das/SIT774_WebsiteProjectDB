{
  "name": "sit774_10.3d",
  "version": "1.0.0",
  "description": "Node.js web application for scenario discussions with DevOps pipeline",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "test": "jest --coverage --verbose --ci --reporters=default --reporters=jest-junit",
    "test:coverage": "NODE_ENV=test jest --coverage --watchAll=false",
    "test:watch": "NODE_ENV=test jest --watch",
    "build": "echo 'Build completed - creating production ready application'",
    "lint": "eslint server/ tests/ --ext .js",
    "lint:fix": "eslint server/ tests/ --ext .js --fix",
    "docker:build": "docker build -t sit774-webapp .",
    "docker:run": "docker run -p 3000:3000 sit774-webapp",
    "security:audit": "npm audit",
    "prestart": "npm run build"
  },
  "keywords": [
    "nodejs",
    "express",
    "devops",
    "jenkins",
    "docker"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.0",
    "sonar-scanner": "^3.1.0",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/node_modules/**",
      "!server/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "reports",
          "outputName": "junit.xml"
        }
      ]
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
